#include <iostream>
#include <conio.h>
#include <windows.h>
using namespace std;

void SetConsoleOutputMode()
{
    HANDLE hOut = GetStdHandle(STD_OUTPUT_HANDLE);
    CONSOLE_SCREEN_BUFFER_INFOEX info;
    info.cbSize = sizeof(CONSOLE_SCREEN_BUFFER_INFOEX);
    GetConsoleScreenBufferInfoEx(hOut, &info);
    info.dwSize.X = info.srWindow.Right + 1;
    info.dwSize.Y = info.srWindow.Bottom + 1;
    info.dwMaximumWindowSize.X = info.dwSize.X;
    info.dwMaximumWindowSize.Y = info.dwSize.Y;
    info.bFullscreenSupported = FALSE;
    SetConsoleScreenBufferInfoEx(hOut, &info);
}



bool gameOver;
const int width = 20;
const int height = 20;
int x, y, fruitX, fruitY, score;
int tailX[100], tailY[100];
int nTail;
enum eDirecton { STOP = 0, LEFT, RIGHT, UP, DOWN };
eDirecton dir;

void Setup()
{
    gameOver = false;
    dir = STOP;
    x = width / 2;
    y = height / 2;
    fruitX = rand() % width;
    fruitY = rand() % height;
    score = 0;
}

void Draw()
{
    // 화면을 완전히 지우지 않고 객체들만 업데이트하여 그립니다.
    // 이를 위해 출력할 문자열을 저장하는 버퍼를 생성합니다.
    char screen[height][width];

    // 버퍼를 초기화합니다.
    for (int i = 0; i < height; i++)
    {
        for (int j = 0; j < width; j++)
        {
            screen[i][j] = ' ';
        }
    }

    // 뱀의 위치를 버퍼에 그립니다.
    screen[y][x] = 'O';
    for (int i = 0; i < nTail; i++)
    {
        screen[tailY[i]][tailX[i]] = 'o';
    }

    // 과일의 위치를 버퍼에 그립니다.
    screen[fruitY][fruitX] = 'F';

    // 버퍼를 출력합니다.
    system("cls"); // 화면을 지우고
    for (int i = 0; i < width + 2; i++)
    {
        cout << "#";
    }
    cout << endl;
    for (int i = 0; i < height; i++)
    {
        cout << "#";
        for (int j = 0; j < width; j++)
        {
            cout << screen[i][j];
        }
        cout << "#" << endl;
    }
    for (int i = 0; i < width + 2; i++)
    {
        cout << "#";
    }
    cout << endl;

    cout << "Score:" << score << endl;
}


void Input()
{
    if (_kbhit())
    {
        switch (_getch())
        {
        case 'a':
            dir = LEFT;
            break;
        case 'd':
            dir = RIGHT;
            break;
        case 'w':
            dir = UP;
            break;
        case 's':
            dir = DOWN;
            break;
        case 'x':
            gameOver = true;
            break;
        }
    }
}
void Logic()
{
    int prevX = tailX[0];
    int prevY = tailY[0];
    int prev2X, prev2Y;
    tailX[0] = x;
    tailY[0] = y;
    for (int i = 1; i < nTail; i++)
    {
        prev2X = tailX[i];
        prev2Y = tailY[i];
        tailX[i] = prevX;
        tailY[i] = prevY;
        prevX = prev2X;
        prevY = prev2Y;
    }
    switch (dir)
    {
    case LEFT:
        x--;
        break;
    case RIGHT:
        x++;
        break;
    case UP:
        y--;
        break;
    case DOWN:
        y++;
        break;
    default:
        break;
    }
    if (x >= width) x = 0; else if (x < 0) x = width - 1;
    if (y >= height) y = 0; else if (y < 0) y = height - 1;

    for (int i = 0; i < nTail; i++)
        if (tailX[i] == x && tailY[i] == y)
            gameOver = true;

    if (x == fruitX && y == fruitY)
    {
        score += 10;
        fruitX = rand() % width;
        fruitY = rand() % height;
        nTail++;
    }
}

int main()
{
    SetConsoleOutputMode(); // Set console output mode
    Setup();
    while (!gameOver)
    {
        Draw();
        Input();
        Logic();
        Sleep(50); // Delay between frames
    }
    return 0;
}
